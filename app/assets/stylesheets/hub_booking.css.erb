@font-face {
    font-family: gothamRoundedLight;
    src: url(<%= font_path 'GothamRnd-Light.otf' %>);
}

@font-face {
    font-family: gothamRoundedMedium;
    src: url(<%= font_path 'GothamRnd-Medium.otf' %>);
}

html {
background: url(<%= asset_path 'bg.jpg' %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  overflow: hidden;
}

body{
  font-family: gothamRoundedLight !important;
  color : #fff !important;
}

h2.time{
  margin:10px;
}
h3 {
  font-size: 18px !important;
  margin:0px !important;
  padding-top:10px !important;
}

h4 {
  font-size: 15px !important;
  margin:0px !important;
  padding:7px !important;
}

.box{
  background-color: rgba(123,100,128,0.2) !important;
  -webkit-box-shadow: 0px 4px 6px 2px rgba(0,0,0,0.2);
  -moz-box-shadow: 0px 4px 6px 2px rgba(0,0,0,0.2);
  box-shadow: 0px 4px 6px 2px rgba(0,0,0,0.2);
  margin-top:8px;
}

.box-without{
  background-color: rgba(123,100,128,0) !important
}

.first{
  margin-top:25px !important;
}

.jumbotron {
  margin:10px !important;
}

.col-md-12{
  padding : 0px ! important;
}

#who {
  padding : 10px 30px  10px 30px !important;
}

#today {
  padding : 5px 30px  5px 30px !important;
}

#message {
  padding : 5px 30px  5px 30px !important;
}

#inventaire {
  padding : 5px 30px  5px 30px !important;
}

#whoishere {
  padding : 10px 10px  400px 10px !important;

}

#news {
  padding : 5px 30px  15px 30px !important;
}

#time {
  padding : 5px 10px  5px 10px !important;
}

.info {
  display:inline-block;
  padding : 0 0 0 25px;
}

th, td {
    border-top: 1px solid #fff;
    margin:0px !important;
}

.photo{
  display:inline-block;
}

.table-transp {
  background-color: rgba(255,255,255,0.2);
}

canvas {

}


#map{
  background: url(<%= asset_path 'map.png' %>);
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center center;
  height: 98vh;
}
#perso-screen{
  display: none;
}

#global-screen{
   vertical-align: middle;
   margin-top: 15%;
}

@-webkit-keyframes foo {
  from {
    -webkit-transform:scale(1);
  }
  to {
    -webkit-transform:scale(1.2);
  }
}

#main{
    display:block;
    width:80%;
    padding:50px 10%;
    height:300px;
}
